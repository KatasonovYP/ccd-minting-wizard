{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/home/entities/*": ["libs/home-layers/src/entities/*/index.ts"],
            "@/home/features/*": ["libs/home-layers/src/features/*/index.ts"],
            "@/home/pages/*": ["libs/home-layers/src/pages/*/index.ts"],
            "@/home/widgets/*": ["libs/home-layers/src/widgets/*/index.ts"],
            "@/shared/assets/*": ["libs/shared/assets/src/*/index.ts"],
            "@/shared/config/*": ["libs/shared/config/src/*/index.ts"],
            "@/shared/css": ["libs/shared/styles/global.css"],
            "@/shared/store/*": ["libs/shared/store/src/*/index.ts"],
            "@/shared/types/*": ["libs/shared/types/*"],
            "@/shared/ui/*": ["libs/shared/ui/src/*/index.ts"],
            "@/shared/utils/*": ["libs/shared/utils/src/*/index.ts"],
            "@my/plugin": ["libs/shared/plugin/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
