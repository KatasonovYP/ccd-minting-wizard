{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/home/entities/*": ["libs/home-layers/src/entities/*"],
            "@/home/features/*": ["libs/home-layers/src/features/*"],
            "@/home/pages/*": ["libs/home-layers/src/pages/*"],
            "@/home/widgets/*": ["libs/home-layers/src/widgets/*"],
            "@/shared/assets/*": ["libs/shared/assets/src/*"],
            "@/shared/config/*": ["libs/shared/config/src/*"],
            "@/shared/css": ["libs/shared/styles/global.css"],
            "@/shared/store/*": ["libs/shared/store/src/*"],
            "@/shared/types/*": ["libs/shared/types/src/lib/*"],
            "@/shared/ui/*": ["libs/shared/ui/src/*"],
            "@/shared/utils/*": ["libs/shared/utils/src/*"],
            "@my/plugin": ["libs/shared/plugin/src"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
